<% include ../partials/header %>
<div class="ui fixed inverted menu">
  <div class="ui container">
   
   <a class="header item"><i class="code icon"></i>Blog site</a>
   <a href="/" class="item">Home</a>
   <a href="/indexhealth/new" class="item">New Post</a>
   </div>
</div>
<div class="ui main text container segment">
  <div class="ui huge header">Edit <%= health.title %></div>
   
    <form class="ui form" action="/indexhealth/<%= health._id %>?_method=PUT" method="POST">
        <div class="field">
        <label>Title</label>
        <input type="text" name="health[title]" value="<%= health.title %>">    
        </div> 
        <div class="field">
        <label>Image</label>
         <input type="text" name="health[image]" value="<%= health.image %>">
        </div>
        <div class="field">
        <label>Blog Content</label>
        <textarea name="health[body]"><%= health.body %></textarea>
        </div>
        <button class="ui green  basic button">
        <i class="icon upload"></i> UPDATE</button>
          
    </form>

</div>

<% include ../partials/footer %>