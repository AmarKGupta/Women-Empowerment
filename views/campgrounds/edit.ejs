<% include ../partials/header %>
    <div class="row">
      <div class="container">
        <h1 style="text-align: center">Update the details of the product</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/index/<%= campground._id %>?_method=PUT" method="POST">
               <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="campground[name]"  value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <label for="name">Price</label>
                    <input class="form-control" type="number" name="campground[price]"  value="<%= campground.price %>" min="0.01" step="1.00">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="campground[image]"  value="<%= campground.image %>" >
                    
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="campground[description]"  value="<%= campground.description %>.">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/index">Go Back</a>
        </div>
    </div>
</div>   
<% include ../partials/footer %> 